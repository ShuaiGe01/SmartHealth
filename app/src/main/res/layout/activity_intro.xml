<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/more_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        >
        <ImageView
            android:id="@+id/intro_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情介绍"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv_blog"
        android:layout_below="@id/more_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/intro_blog_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/great" />
        <LinearLayout
            android:layout_below="@id/intro_blog_iv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/intro_blog_icon"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/myicon"
                android:layout_weight="1"

                />
            <TextView
                android:id="@+id/intro_blog_id"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="第一个注册用户"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/tv_attention"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/attention"/>
        </LinearLayout>
        <TextView
            android:id="@+id/intro_tv_title"
            android:text="不到长城非好汉,领略长城的壮阔吧"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="30dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fillViewport="true">
        <TextView
            android:id="@+id/intro_tv_intro"
            android:text="不到长城非好汉,领略长城的壮阔吧555555555555555555555555555555555555555"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>